/*店铺地址简介*/

.list{
  width: 100%;
  height: 100%;
  background-color: rgb(238, 201, 201);
  display: flex;
  flex-direction: column;
  align-items:center;
}
.card{
  height: 250rpx;
  width: 95%;
  border-bottom: 1rpx solid #cdcdcd;
  display: flex;
  align-items: center ;
}
.cover{
  height: 200rpx;
  width: 200rpx;
  border: 1rpx solid #cdcdcd;
}
.info{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin: 0 20rpx;
}
.name{
  color: #444444;
  font-size:36rpx ;
  font-weight: bold;
}
.time{
  margin-top: 30rpx;
  color: #d81e06;
  font-size: 25rpx;
}
.address{
  color: #444444;
  font-size: x-small;
}


