  width: 100%;
  display: flex;
}
.fall-left {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}
.fall-centre{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-top: 20rpx;
  
}
.fall-right {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-top: 20rpx;
}